%%-*- mode: erlang -*-
{lib_dirs,            [".."]}.
{deps_dir,            ["deps"]}.
{erl_opts,            [ debug_info
                      , warn_unused_vars
                      , warn_shadow_vars
                      , warn_unused_import
                      , warnings_as_errors
                      ]}.
{cover_enabled,       true}.
{cover_print_enabled, true}.
{xref_checks,         [ fail_on_warning
                      , undefined_function_calls
                      ]}.
{xref_warnings,       true}.
{deps,
 [ {tulib,    ".*", {git, "git://git.hq.kred/tulib.git",    {tag, "0.9.0"}}}
 , {datetime, ".*", {git, "git://git.hq.kred/datetime.git", {tag, "2.2.0"}}}
 ]}.
