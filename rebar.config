%%-*- mode: erlang -*-
{lib_dirs,            ["lib",".."]}.
{deps_dir,            ["lib"]}.
{erl_opts,            [ debug_info
                      , warn_unused_vars
                      , warn_shadow_vars
                      , warn_unused_import
                      , warnings_as_errors
                      ]}.
{eunit_opts,          [{report, {eunit_report_surefire, [{dir,"."}]}}]}.
{cover_enabled,       true}.
{cover_print_enabled, true}.
{xref_checks,         [ fail_on_warning
                      , undefined_function_calls
                      ]}.
{xref_warnings,       true}.
{deps,
 [ {tulib,    ".*", {git, "ssh://git@stash.internal.machines:7999/fredp/tulib.git",    {tag, "4.1.3"}}}
 , {datetime, ".*", {git, "ssh://git@stash.internal.machines:7999/freda/datetime.git", {tag, "7.0.1"}}}
 , {meck,     ".*", {git, "ssh://git@stash.int.klarna.net:7999/external/meck.git",     {tag, "0.8.2"}}}
 , {proper,   ".*", {git, "ssh://git@stash.int.klarna.net:7999/external/proper.git",   {tag, "0.0.1+fred+proper-420c40dc"}}}
 , {tetht,    ".*", {git, "ssh://git@stash.int.klarna.net:7999/fredp/tetht.git",       {tag, "3.4.1"}}}
 ]}.
